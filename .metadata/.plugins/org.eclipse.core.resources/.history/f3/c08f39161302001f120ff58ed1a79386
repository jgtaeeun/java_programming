	private String dept; 
	
    public Employee() {} //default생성자 자바가 자동 생성
    
    public Employee(String name, int age, String dept) {
    	this.name = name ;      //this는 Employee객체의 인스턴스(heap에 있는)를 가리킨다.
    	this.age = age ;
    	this.dept = dept ;
    }
